<h1>Option</h1>
	<div class="btn-group">
		<%= link_to "Back", options_path, class:"btn btn-secondary" %>
		<%= link_to "Edit", edit_option_path, class:"btn btn-secondary" %>
	</div>
<br>
<section class="well">
	<ul>
		<li><b>Name</b><br><%= @option.text %></li><br>
		<li><b>Used in</b><br/>
			<% @option.questions.each do |question| %>
				<%= question.name %><br/>
			<% end %>
		</li>
	</ul>
</section>
