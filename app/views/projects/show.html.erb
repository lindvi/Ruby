<h1><%= @project.name %></h1>
<% if @project.active %>
	<h2 class="active">Active</h2>
	<div class="btn-group">
		<%= link_to "Back", projects_path, class:"btn" %>
		<%= link_to "Edit", edit_project_path, class:"btn" %>
		<%= link_to "XML", project_path(:format => :xml) , class:"btn" %>
		<%= link_to "JSON", project_path(:format => :json) , class:"btn" %>
	</div>
<% else %>
	<h2 class="inactive">Inactive</h2>
	<div class="btn-group">
		<%= link_to "Back", projects_path, class:"btn" %>
		<%= link_to "Edit", edit_project_path, class:"btn" %>
	</div>
<% end %>
<br>
<section class="well">
<p>Information:</p>
<ul>
	<li><b>Id:</b> <%= @project.id %></li>
	<li><b>Created:</b> <%= @project.created_at %></li>
	<li><b>Version:</b> <%= @project.version %></li>
	<li><b>Start question:</b><%= @project.start_question %></li>
	<li><b>Name of question:</b><%= @project.start_question_name %></li>
	<li><b>Number of questions:</b> <%= @project.questions.count %></li>
</ul>
</section>
<%= render 'list' %>
<br>
<%= link_to "Add question", new_question_path(project_id: @project.id), class: "btn btn-large btn-primary" %>