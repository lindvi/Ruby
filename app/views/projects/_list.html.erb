<% if @rpqs.any? %>
	<h2>List of questions</h2>
	<table class="table table-condensed">
		<thead>
			<tr>
				<th>ID</th>
				<th>Name</th>
				<th>Content</th>
				<th>Type</th>
				<th>Min / Max</th>
				<th>Picture</th>
				<th>Audio</th>
				<th>Next model</th>
				<th>Controllers</th>
			</tr>
		</thead>
		<tbody>
		<% @rpqs.each do |rpq| %>
			<tr>
				<td><%= rpq.question.id %></td>
				<td><%= rpq.question.name %></td>
				<td><%= rpq.question.content ||= "Not set" %></td>
				<td><%= rpq.question.answer_type %></td>
				<td><%= rpq.question.min.to_s + " / " + rpq.question.max.to_s %></td>
				<td>
					<% if !rpq.question.picture_url.empty? %>
						<i class="icon-ok"></i>
					<% else %>
						<i class="icon-remove"></i>
					<% end %>
				</td>
				<td>
					<% if !rpq.question.audio_url.empty? %>
						<i class="icon-ok"></i>
					<% else %>
						<i class="icon-remove"></i>
					<% end %>
				</td>
				<td><%= rpq.question.next_model %></td>
				<td>
					<%= link_to "Show", question_path(rpq.question_id), class:"btn btn-small btn-info" %>
					<%= link_to "Destroy", rpq_path(rpq), method: :delete, data: { confirm: "You sure?" },  class:"btn btn-small btn-danger" %>
				</td>

			</tr>
		<% end %>
		</tbody>	
	</table>
<% else %>
		<h3>There are no questions bound to this project. Why not add some?</h3>
<% end %>
