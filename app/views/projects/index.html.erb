<h1>Projects</h1>
<table class="table table-condensed">
	<thead>
		<tr>
			<th>Name  </th>
			<th>Version  </th>
			<th>Active  </th>
			<th>Controllers</th>
		</tr>
	</thead>
	<tbody>
		<% @projects.each do |project| %>
			<tr>
				<td><%= project.name %></td>
				<td><%= project.version %></td>
				<td><%= project.active %></td>
				<td>
					<%= link_to 'Show' , project, class:"btn btn-small btn-info" %>
					<%= link_to 'Destroy', project, :confirm => 'Are you sure?', :method => :delete , class:"btn btn-small btn-danger" %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>
<br />
<%= link_to 'New project', new_project_path, class: "btn btn-large btn-primary"%>