<table class="table table-condensed">
	<thead>
		<tr>
			<th>#</th>
			<th>Phone</th>
			<th>Admin</th>
			<th>Controllers</th>
		</tr>
	</thead>
	<tbody>
	<% @users.each do |user| %>
		<tr>
			<td><%= user.id %></td>
			<td><%= user.phone %></td>
			<td><%= user.admin? %></td>
			<td>
