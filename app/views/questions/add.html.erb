<h1> Add option to <%= @question.name %></h1>

<%= link_to "Back", question_path, class:"btn btn-small btn-secondary" %>
<% form_for(@option) do |f| %>
	<% if @option.errors.any? %>
	    <div id="error_explanation">
	      <h2><%= pluralize(@option.errors.count, "error") %> prohibited this roq from being saved:</h2>

	      <ul>
	      <% @option.errors.full_messages.each do |msg| %>
	        <li><%= msg %></li>
	      <% end %>
	      </ul>
	    </div>
	<% end %>

	<div class="field">
	    <%= f.label :text %><br />
	    <%= f.text_field :text %>


	</div>
	<div class="actions">
		<%= f.submit %>
	</div>
<% end %>

