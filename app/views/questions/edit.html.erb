<div class="page-header">
	<h1 class="hleft">Edit question</h1>
</div>
<h2 class="hleft"><%= @question.name %></h2><br><br>
<%= link_to "Back", question_path, class:"btn btn-small btn-secondary" %><br><br>
<section class="well">
	<dl class="dl-horizontal">
		<dt>Name</dt>
		<dd><%= @question.name %></dd>
		<dt>Content</dt>
		<dd><%= @question.content %></dd>
		<dt>Type of answer</dt>
		<dd><%= @question.answer_type %></dd>
		<% if !@question.picture_url.empty? %>
			<dt>Picture</dt>
			<dd><%= @question.picture_url %></dd>
		<% end %>
		<% if !@question.audio_url.empty? %>
			<dt>Picture</dt>
			<dd><%= @question.audio_url %></dd>
		<% end %>
		<dt>Min / Max</dt>
		<dd><%= @question.min.to_s + " / " + @question.max.to_s %></dd>
		<dt>Reminder</dt>
		<dd>
		<% if @question.set_reminder %>
			<span class="label label-success">Yes</span>
		<% else %>
			<span class="label"> No </span>
		<% end %>
		</dd>
		<dt>Part of project</dt>
		<dd><%= link_to @question.projects.first.name, @question.projects.first %></dd>
	</dl>
</section>
<%= form_for(@question) do |f| %>
		<%= f.label :id %>
		<%= f.number_field :id, style: "height:40px"  %>

	    <%= f.label :name %>
	    <%= f.text_field :name, style: "height:40px"  %>

	    <%= f.label :content %>
      	<%= f.text_area :content, style: "height:250px"  %>
	
		<%= f.label :answer_type %><br />
		<%= select(f, :answer_type, ['button','textinput','equation']) %>
	
	    <%= f.label :audio_url %>
	    <%= f.text_field :audio_url, style: "height:40px"  %>

	    <%= f.label :picture_url %>
	    <%= f.text_field :picture_url, style: "height:40px"  %>

		<%= f.label :min %>
		<%= f.number_field :min, style: "height:40px"  %>

		<%= f.label :max %>
		<%= f.number_field :max, style: "height:40px"  %>

		<%= f.label "Set reminder" %>
      	<%= f.radio_button :set_reminder, :true %>
      	<br><br>
      	<%= f.label "No reminder" %>
      	<%= f.radio_button :set_reminder, :false %>
      	<br><br>
	
	    <%= f.label :next_model %><br />
	    <%= f.text_field :next_model, style: "height:40px"  %>
	
	    <%= f.label :schedule_next_model %><br />
	    <%= f.text_field :schedule_next_model, style: "height:40px"  %>

	    <%= f.label :schedule_next_model_offset %><br />
	    <%= f.number_field :schedule_next_model_offset, style: "height:40px"  %>

	    <%= f.submit "Save changes", class: "btn btn-large btn-success" %>
<% end %>
