<% if @roqs.any? %>
	<h2>List of options</h2>
	<table class="table table-condensed">
		<thead>
			<tr>
				<th>Text</th>
				<th>Next</th>
				<th>Value</th>
				<th>Min. range</th>
				<th>Max. range</th>
				<th>Controllers</th>
			</tr>
		</thead>
		<tbody>
		<% @roqs.each do |roq| %>
			<tr>
				<td><%= roq.option.text %></td>
				<td>
					<% if !roq.next.nil? %>
						<%= roq.next.name %>
					<% else %>
						Not set
					<% end %>
				</td>
				<td><%= roq.value %></td>
				<td><%= roq.min_range %></td>
				<td><%= roq.max_range %></td>
				<td>
					<%= link_to "Edit text", edit_option_path(roq.option), class: "btn btn-small btn-warning" %>
					<% if roq.next.nil? %>
						<%= link_to "Add relation", edit_roq_path(roq), class:"btn btn-small btn-success" %>
					<% else %>
						<%= link_to "Edit relation", edit_roq_path(roq), class:"btn btn-small btn-warning" %>
					<% end %>
					<%= link_to "Destroy", roq_path(roq), method: :delete, data: { confirm: "You sure?" },  class:"btn btn-small btn-danger" %>
				</td>
			</tr>
		<% end %>
		</tbody>	
	</table>
<% else %>
	<h3>There are no options bound to this question. Why not add some?</h3>
<% end %>
