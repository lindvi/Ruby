<h1>Questions</h1>
<table class="table table-condensed">
	<thead>
		<tr>
			<th>#</th>
			<th>Name  </th>
			<th>Content </th>
			<th>Controllers</th>
		</tr>
	</thead>
	<tbody>
		<% @questions.each do |question| %>
			<tr>
				<td><%= question.id %></td>
				<td><%= question.name %></td>
				<td><%= question.content %></td>
				<td>
					<%= link_to "<i class=\"icon-question-sign icon-white\"></i>".html_safe , question , class:"btn btn-small btn-success"%>
					<%= link_to "<i class=\"icon-cog icon-white\"></i>".html_safe, edit_question_path(question), class:"btn btn-small btn-warning"%>
					<%= link_to "<i class=\"icon-trash icon-white\"></i>".html_safe, question, :confirm => 'Are you sure?', :method => :delete , class:"btn btn-small btn-danger"%>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>
<br />
<%= link_to 'New question', new_question_path, class: "btn btn-large btn-primary"%>