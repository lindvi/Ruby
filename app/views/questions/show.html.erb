<h1>Question</h1>
	<div class="btn-group">
		<%= link_to "Back", @question.projects.first, class:"btn btn-secondary" %>
		<%= link_to "Edit", edit_question_path, class:"btn btn-secondary" %>
	</div>
<br>
<section class="well">
	<dl class="dl-horizontal">
		<dt>Name</dt>
		<dd><%= @question.name %></dd>
		<dt>Content</dt>
		<dd><%= @question.content ||= "Nil"%></dd>
		<dt>Type of answer</dt>
		<dd><%= @question.answer_type %></dd>
		<% if !@question.picture_url.empty? %>
			<dt>Picture</dt>
			<dd><%= @question.picture_url %></dd>
		<% end %>
		<% if !@question.audio_url.empty? %>
			<dt>Picture</dt>
			<dd><%= @question.audio_url %></dd>
		<% end %>
		<dt>Min / Max</dt>
		<dd><%= @question.min.to_s + " / " + @question.max.to_s %></dd>
		<dt>Reminder</dt>
		<dd>
		<% if @question.set_reminder %>
			<span class="label label-success">Yes</span>
		<% else %>
			<span class="label"> No </span>
		<% end %>
		</dd>
		<dt>Part of project</dt>
		<% if @question.projects.nil? %>
			<dd></dd>
		<% else %>
			<dd><%= link_to @question.projects.first.name, @question.projects.first %></dd>
		<% end %>
		<dt>Scheduled next model</dt>
		<dd><%= @question.schedule_next_model %></dd>
		<dt>Scheduled next model offset</dt>
		<dd><%= @question.schedule_next_model_offset %></dd>
		<dt>Next model</dt>
		<dd><%= @question.next_model %></dd>
	</dl>
	
</section>
<%= link_to "Add option", new_option_path(question_id: @question.id), class: "btn btn-large btn-primary" %>

<%= render 'list' %>
